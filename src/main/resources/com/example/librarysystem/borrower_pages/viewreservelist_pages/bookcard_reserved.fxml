            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
      <Label fx:id="bookCategory_label" alignment="CENTER" prefHeight="18.0" prefWidth="197.0" text="Category" />
        <Label fx:id="bookauthor" alignment="CENTER" prefHeight="18.0" prefWidth="192.0" text="Author" />
      <Label fx:id="bookPublicationYear_label" alignment="CENTER" prefHeight="18.0" prefWidth="198.0" text="Publicaiton year" />
        <Button fx:id="reservedBook_btn" mnemonicParsing="false" prefHeight="26.0" prefWidth="166.0" style="-fx-background-color: #BC4343;" text="Reserved" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font>
        </Button>
    </children>
